<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login & Registro</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
    
      <%- include('includes/messages') %>

       <!-- REGISTRO -->
      <div class="row">
        <div class="col-lg">
          <h4>Faça seu Cadastro</h4>
          <div id="registerHelp" class="form-text">se você ainda nao possui uma conta, preencha o formulario abaixo</div>
          
          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email"></input>
              </div>
              <div class="form-group">
                <label>Sua senha</label> 
                <input type="password" class="form-control" name="password">
              </div> <br>
              <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>


        <!-- LOGIN -->
        <div class="col-lg">
          <h4>Faça seu Login</h4>
          <div id="registerHelp" class="form-text">Se você já possui uma conta, fala login abaixo</div>
          <form class="form-login"action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email"></input>
              </div>
              <div class="form-group">
                <label>Sua senha</label> 
                <input type="password" class="form-control" name="password">
              </div> <br>
              <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>

    </div>


  </div>
</div>

<%- include('includes/footer') %>

